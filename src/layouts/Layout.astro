---
interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { title, description = "Convertissez facilement entre allure, vitesse, temps et distance pour la course à pied et la natation", image = "/convertisseur_allure/og-image.png" } = Astro.props;
const baseUrl = import.meta.env.BASE_URL;
const siteUrl = "https://AdrienBrFa.github.io/convertisseur_allure";
const currentUrl = new URL(Astro.url.pathname, siteUrl).href;
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#2563eb" />
    <meta name="keywords" content="convertisseur allure, calculatrice course à pied, natation, triathlon, pace converter, running calculator" />
    <meta name="robots" content="index, follow" />
    <meta name="language" content="French" />
    <link rel="icon" type="image/svg+xml" href={`${baseUrl}/favicon.svg`} />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={currentUrl} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={currentUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:site_name" content="Pace Converter - Convertisseur d'Allure" />
    <meta property="og:locale" content="fr_FR" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={currentUrl} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={image} />
    
    <!-- Manifest for PWA -->
    <link rel="manifest" href={`${baseUrl}/manifest.json`} />
    
    <!-- Schema.org JSON-LD -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "WebApplication",
      "name": "Pace Converter - Convertisseur d'Allure",
      "description": "Convertisseur libre et gratuit pour calculer allure, vitesse, temps et distance en course à pied et natation",
      "url": siteUrl,
      "applicationCategory": "SportingGoodsStore",
      "offers": {
        "@type": "Offer",
        "price": "0"
      },
      "creator": {
        "@type": "Organization",
        "name": "Pace Converter",
        "url": siteUrl
      }
    })} />
    </script>
    <title>{title}</title>
    <style is:global>
      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      :root {
        --primary-color: #2563eb;
        --secondary-color: #0ea5e9;
        --text-color: #1f2937;
        --bg-color: #ffffff;
        --border-color: #e5e7eb;
        --success-color: #10b981;
        --shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1);
      }

      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
        line-height: 1.6;
        color: var(--text-color);
        background-color: var(--bg-color);
        min-height: 100vh;
      }

      h1, h2, h3 {
        font-weight: 600;
        line-height: 1.2;
      }

      h1 {
        font-size: clamp(1.75rem, 5vw, 2.5rem);
      }

      h2 {
        font-size: clamp(1.5rem, 4vw, 2rem);
        margin-bottom: 1.5rem;
      }

      input, select, button {
        font-family: inherit;
        font-size: 1rem;
      }

      input:focus, select:focus, button:focus {
        outline: 2px solid var(--primary-color);
        outline-offset: 2px;
      }

      /* Simple site nav */
      .site-nav {
        background: #ffffff;
        border-bottom: 1px solid var(--border-color);
        box-shadow: var(--shadow);
        position: sticky;
        top: 0;
        z-index: 10;
      }
      .nav-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0.75rem 1rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
      }
      .nav-brand {
        color: var(--primary-color);
        text-decoration: none;
        font-weight: 600;
      }
      .nav-links {
        display: flex;
        gap: 1rem;
      }
      .nav-links a {
        color: var(--text-color);
        text-decoration: none;
        font-weight: 500;
      }
      .nav-links a:hover {
        color: var(--primary-color);
      }
    </style>
  </head>
  <body>
    <nav class="site-nav">
      <div class="nav-container">
        <a href={baseUrl} class="nav-brand">Pace Converter</a>
        <div class="nav-links">
          <a href={`${baseUrl}/running`}>Running</a>
          <a href={`${baseUrl}/swimming`}>Swimming</a>
          <a href={`${baseUrl}/triathlon`}>Triathlon</a>
        </div>
      </div>
    </nav>
    <slot />
  </body>
</html>
