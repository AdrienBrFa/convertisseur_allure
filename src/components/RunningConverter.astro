---
// Running Converter Component
---

<div class="converter-section">
  <h2>üèÉ Running Pace Converter</h2>
  <div class="mode-select">
    <label for="run-mode">Mode</label>
    <select id="run-mode">
      <option value="distance-time">Distance + Time ‚Üí Pace</option>
      <option value="distance-pace">Distance + Pace ‚Üí Time</option>
      <option value="pace-time">Pace + Time ‚Üí Distance</option>
      <option value="speed-time">Speed + Time ‚Üí Distance</option>
      <option value="speed-distance">Speed + Distance ‚Üí Time</option>
    </select>
  </div>
  
  <div class="converter-grid" id="run-grid">
    <div class="input-group" data-field="distance">
      <label for="run-distance">Distance</label>
      <div class="input-with-unit">
        <input type="number" id="run-distance" step="0.01" min="0" placeholder="0" />
        <select id="run-distance-unit">
          <option value="km">km</option>
          <option value="m">m</option>
          <option value="mi">mi</option>
        </select>
      </div>
      <div class="shortcut-buttons" data-shortcuts="distance">
        <button type="button" data-distance="5">5km</button>
        <button type="button" data-distance="10">10km</button>
        <button type="button" data-distance="20">20km</button>
        <button type="button" data-distance="21.1">SM</button>
        <button type="button" data-distance="42.195">M</button>
        <button type="button" data-distance="50">50km</button>
      </div>
    </div>

    <div class="input-group" data-field="time">
      <label for="run-time">Time</label>
      <div class="time-inputs">
        <input type="number" id="run-hours" min="0" max="23" placeholder="h" />
        <span>:</span>
        <input type="number" id="run-minutes" min="0" max="59" placeholder="m" />
        <span>:</span>
        <input type="number" id="run-seconds" min="0" max="59" placeholder="s" />
      </div>
      <div class="shortcut-buttons" data-shortcuts="time">
        <button type="button" data-time="1800">30min</button>
        <button type="button" data-time="3600">1h</button>
        <button type="button" data-time="5400">1h30</button>
        <button type="button" data-time="7200">2h</button>
        <button type="button" data-time="9000">2h30</button>
        <button type="button" data-time="10800">3h</button>
      </div>
    </div>

    <div class="input-group" data-field="pace">
      <label for="run-pace">Pace</label>
      <div class="input-with-unit">
        <input type="text" id="run-pace" placeholder="0:00" />
        <select id="run-pace-unit">
          <option value="min/km">min/km</option>
          <option value="min/mi">min/mi</option>
        </select>
      </div>
      <div class="shortcut-buttons" data-shortcuts="pace">
        <button type="button" data-pace="3:00">3'00</button>
        <button type="button" data-pace="3:30">3'30</button>
        <button type="button" data-pace="4:00">4'00</button>
        <button type="button" data-pace="4:30">4'30</button>
        <button type="button" data-pace="5:00">5'00</button>
        <button type="button" data-pace="5:30">5'30</button>
        <button type="button" data-pace="6:00">6'00</button>
        <button type="button" data-pace="6:30">6'30</button>
        <button type="button" data-pace="7:00">7'00</button>
      </div>
    </div>

    <div class="input-group" data-field="speed">
      <label for="run-speed">Speed</label>
      <div class="input-with-unit">
        <input type="text" id="run-speed" placeholder="0.00" />
        <select id="run-speed-unit">
          <option value="km/h">km/h</option>
          <option value="mph">mph</option>
          <option value="m/s">m/s</option>
        </select>
      </div>
      <div class="shortcut-buttons" data-shortcuts="speed">
        <button type="button" data-speed="10">10km/h</button>
        <button type="button" data-speed="12">12km/h</button>
        <button type="button" data-speed="15">15km/h</button>
        <button type="button" data-speed="20">20km/h</button>
      </div>
    </div>
  </div>
</div>

<style>
  .converter-section {
    background: white;
    border-radius: 1rem;
    padding: 2rem;
    box-shadow: var(--shadow);
    margin: 0 auto 2rem;
    max-width: 900px;
  }

  .converter-grid {
    display: grid;
    gap: 1.5rem;
    margin-bottom: 1.5rem;
  }

  .mode-select {
    display: flex;
    gap: 0.75rem;
    align-items: center;
    margin-bottom: 1rem;
  }

  @media (min-width: 768px) {
    .converter-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  label {
    font-weight: 500;
    font-size: 0.95rem;
    color: var(--text-color);
  }

  .input-with-unit {
    display: flex;
    gap: 0.5rem;
  }

  .input-with-unit input {
    flex: 1;
    min-width: 0;
  }

  input[type="number"],
  input[type="text"],
  select {
    padding: 0.75rem;
    border: 1px solid var(--border-color);
    border-radius: 0.5rem;
    background: white;
  }

  select {
    min-width: 85px;
    cursor: pointer;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .time-inputs {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .time-inputs input {
    flex: 1;
    text-align: center;
  }

  .time-inputs span {
    font-weight: bold;
    color: var(--text-color);
  }

  /* Reordering by mode */
  .converter-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
    margin-bottom: 1.5rem;
  }

  .input-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .converter-grid.mode-distance-time [data-field="distance"] { order: 1; }
  .converter-grid.mode-distance-time [data-field="time"] { order: 2; }
  .converter-grid.mode-distance-time [data-field="pace"] { order: 3; }
  .converter-grid.mode-distance-time [data-field="speed"] { order: 4; }

  .converter-grid.mode-distance-pace [data-field="distance"] { order: 1; }
  .converter-grid.mode-distance-pace [data-field="pace"] { order: 2; }
  .converter-grid.mode-distance-pace [data-field="time"] { order: 3; }
  .converter-grid.mode-distance-pace [data-field="speed"] { order: 4; }

  .converter-grid.mode-pace-time [data-field="pace"] { order: 1; }
  .converter-grid.mode-pace-time [data-field="time"] { order: 2; }
  .converter-grid.mode-pace-time [data-field="distance"] { order: 3; }
  .converter-grid.mode-pace-time [data-field="speed"] { order: 4; }

  .converter-grid.mode-speed-time [data-field="speed"] { order: 1; }
  .converter-grid.mode-speed-time [data-field="time"] { order: 2; }
  .converter-grid.mode-speed-time [data-field="distance"] { order: 3; }
  .converter-grid.mode-speed-time [data-field="pace"] { order: 4; }

  .converter-grid.mode-speed-distance [data-field="speed"] { order: 1; }
  .converter-grid.mode-speed-distance [data-field="distance"] { order: 2; }
  .converter-grid.mode-speed-distance [data-field="time"] { order: 3; }
  .converter-grid.mode-speed-distance [data-field="pace"] { order: 4; }

  /* Shortcut buttons */
  .shortcut-buttons {
    display: none;
    gap: 0.5rem;
    flex-wrap: wrap;
    margin-top: 0.5rem;
  }

  .shortcut-buttons button {
    padding: 0.4rem 0.75rem;
    border: 1px solid var(--border-color);
    border-radius: 0.375rem;
    background: white;
    cursor: pointer;
    font-size: 0.85rem;
    transition: all 0.2s;
  }

  .shortcut-buttons button:hover {
    background: #f3f4f6;
    border-color: #9ca3af;
  }

  .shortcut-buttons button:active {
    background: #e5e7eb;
  }

  /* Show shortcuts only for editable fields (order 1 or 2) */
  .converter-grid.mode-distance-time [data-field="distance"] .shortcut-buttons[data-shortcuts="distance"],
  .converter-grid.mode-distance-time [data-field="time"] .shortcut-buttons[data-shortcuts="time"] {
    display: flex;
  }

  .converter-grid.mode-distance-pace [data-field="pace"] .shortcut-buttons[data-shortcuts="pace"],
  .converter-grid.mode-distance-pace [data-field="distance"] .shortcut-buttons[data-shortcuts="distance"] {
    display: flex;
  }

  .converter-grid.mode-pace-time [data-field="pace"] .shortcut-buttons[data-shortcuts="pace"],
  .converter-grid.mode-pace-time [data-field="time"] .shortcut-buttons[data-shortcuts="time"] {
    display: flex;
  }

  .converter-grid.mode-speed-time [data-field="speed"] .shortcut-buttons[data-shortcuts="speed"],
  .converter-grid.mode-speed-time [data-field="time"] .shortcut-buttons[data-shortcuts="time"] {
    display: flex;
  }

  .converter-grid.mode-speed-distance [data-field="speed"] .shortcut-buttons[data-shortcuts="speed"],
  .converter-grid.mode-speed-distance [data-field="distance"] .shortcut-buttons[data-shortcuts="distance"] {
    display: flex;
  }

  @media (max-width: 640px) {
    .converter-section {
      padding: 1.5rem;
    }

    .mode-select {
      flex-direction: column;
      align-items: flex-start;
    }

    .converter-grid {
      grid-template-columns: 1fr;
    }

    .input-with-unit input {
      flex: 1;
      padding: 0.5rem;
    }

    .input-with-unit select {
      flex: 0 0 auto;
      min-width: 0;
    }
  }
</style>

<script>
  // Running Converter Logic
  const runDistance = document.getElementById('run-distance') as HTMLInputElement;
  const runDistanceUnit = document.getElementById('run-distance-unit') as HTMLSelectElement;
  const runHours = document.getElementById('run-hours') as HTMLInputElement;
  const runMinutes = document.getElementById('run-minutes') as HTMLInputElement;
  const runSeconds = document.getElementById('run-seconds') as HTMLInputElement;
  const runPace = document.getElementById('run-pace') as HTMLInputElement;
  const runPaceUnit = document.getElementById('run-pace-unit') as HTMLSelectElement;
  const runSpeed = document.getElementById('run-speed') as HTMLInputElement;
  const runSpeedUnit = document.getElementById('run-speed-unit') as HTMLSelectElement;
  const runMode = document.getElementById('run-mode') as HTMLSelectElement;
  const runGrid = document.getElementById('run-grid') as HTMLElement;

  // Verify all elements are loaded
  if (!runDistance || !runHours || !runPace || !runSpeed) {
    console.error('Running converter: Missing DOM elements');
  }

  function updateModeClass() {
    const mode = runMode?.value || 'distance-time';
    runGrid?.classList.remove('mode-distance-time', 'mode-distance-pace', 'mode-pace-time', 'mode-speed-time', 'mode-speed-distance');
    runGrid?.classList.add(`mode-${mode}`);
  }

  function convertDistanceToKm(distance: number, unit: string): number {
    switch (unit) {
      case 'km': return distance;
      case 'm': return distance / 1000;
      case 'mi': return distance * 1.60934;
      default: return distance;
    }
  }

  function convertKmToDistance(km: number, unit: string): number {
    switch (unit) {
      case 'km': return km;
      case 'm': return km * 1000;
      case 'mi': return km / 1.60934;
      default: return km;
    }
  }

  function getTimeInSeconds(): number {
    const h = parseInt(runHours.value) || 0;
    const m = parseInt(runMinutes.value) || 0;
    const s = parseInt(runSeconds.value) || 0;
    return h * 3600 + m * 60 + s;
  }

  function formatTime(seconds: number): string {
    const m = Math.floor(seconds / 60);
    const s = Math.floor(seconds % 60);
    return `${m}:${s.toString().padStart(2, '0')}`;
  }

  function parsePaceToSecondsPerKm(): number | null {
    // Expects runPace.value like mm:ss and unit in runPaceUnit
    const val = (runPace.value || '').trim();
    if (!val) return null;
    const parts = val.split(':');
    if (parts.length !== 2) return null;
    const m = parseInt(parts[0]);
    const s = parseInt(parts[1]);
    if (isNaN(m) || isNaN(s)) return null;
    const secPerUnit = m * 60 + s;
    // Convert to seconds per km if unit is min/mi
    if (runPaceUnit.value === 'min/mi') {
      return secPerUnit / 1.60934;
    }
    return secPerUnit; // min/km
  }

  function setReadonlyStates() {
    const mode = runMode?.value || 'distance-time';
    // First two fields are always inputs, last two are always calculated
    if (mode === 'distance-time') {
      runDistance.readOnly = false;
      runHours.readOnly = false;
      runMinutes.readOnly = false;
      runSeconds.readOnly = false;
      runPace.readOnly = true;
      runSpeed.readOnly = true;
    } else if (mode === 'distance-pace') {
      runPace.readOnly = false;
      runDistance.readOnly = false;
      runHours.readOnly = true;
      runMinutes.readOnly = true;
      runSeconds.readOnly = true;
      runSpeed.readOnly = true;
    } else if (mode === 'pace-time') {
      runPace.readOnly = false;
      runHours.readOnly = false;
      runMinutes.readOnly = false;
      runSeconds.readOnly = false;
      runDistance.readOnly = true;
      runSpeed.readOnly = true;
    } else if (mode === 'speed-time') {
      runSpeed.readOnly = false;
      runHours.readOnly = false;
      runMinutes.readOnly = false;
      runSeconds.readOnly = false;
      runDistance.readOnly = true;
      runPace.readOnly = true;
    } else if (mode === 'speed-distance') {
      runSpeed.readOnly = false;
      runDistance.readOnly = false;
      runHours.readOnly = true;
      runMinutes.readOnly = true;
      runSeconds.readOnly = true;
      runPace.readOnly = true;
    }
  }

  function calculateRunning() {
    const mode = runMode?.value || 'distance-time';
    const distance = parseFloat(runDistance.value);
    const timeInSeconds = getTimeInSeconds();
    const distanceInKm = !isNaN(distance) ? convertDistanceToKm(distance, runDistanceUnit.value) : NaN;

    if (mode === 'distance-time') {
      // Inputs: distance, time ‚Üí Calculate: pace, speed
      if (!distanceInKm || distanceInKm <= 0 || !timeInSeconds || timeInSeconds <= 0) {
        runPace.value = '';
        runSpeed.value = '';
        return;
      }
      // Calculate pace
      const paceUnit = runPaceUnit.value;
      let paceDistance = distanceInKm;
      if (paceUnit === 'min/mi') paceDistance = distanceInKm / 1.60934;
      const paceInSeconds = timeInSeconds / paceDistance;
      runPace.value = formatTime(paceInSeconds);
      // Calculate speed
      const speedUnit = runSpeedUnit.value;
      let speed = 0;
      if (speedUnit === 'km/h') {
        speed = (distanceInKm / timeInSeconds) * 3600;
      } else if (speedUnit === 'mph') {
        speed = ((distanceInKm / 1.60934) / timeInSeconds) * 3600;
      } else if (speedUnit === 'm/s') {
        speed = (distanceInKm * 1000) / timeInSeconds;
      }
      runSpeed.value = speed.toFixed(2);
    } else if (mode === 'distance-pace') {
      // Inputs: pace, distance ‚Üí Calculate: time, speed
      if (!distanceInKm || distanceInKm <= 0) {
        runHours.value = '';
        runMinutes.value = '';
        runSeconds.value = '';
        runSpeed.value = '';
        return;
      }
      const secPerKm = parsePaceToSecondsPerKm();
      if (secPerKm == null || secPerKm <= 0) {
        runHours.value = '';
        runMinutes.value = '';
        runSeconds.value = '';
        runSpeed.value = '';
        return;
      }
      // Calculate time
      const totalSeconds = secPerKm * distanceInKm;
      const h = Math.floor(totalSeconds / 3600);
      const m = Math.floor((totalSeconds % 3600) / 60);
      const s = Math.floor(totalSeconds % 60);
      runHours.value = String(h);
      runMinutes.value = String(m);
      runSeconds.value = String(s);
      // Calculate speed
      const speedUnit = runSpeedUnit.value;
      let speed = 0;
      if (speedUnit === 'km/h') {
        speed = (distanceInKm / totalSeconds) * 3600;
      } else if (speedUnit === 'mph') {
        speed = ((distanceInKm / 1.60934) / totalSeconds) * 3600;
      } else if (speedUnit === 'm/s') {
        speed = (distanceInKm * 1000) / totalSeconds;
      }
      runSpeed.value = speed.toFixed(2);
    } else if (mode === 'pace-time') {
      // Inputs: pace, time ‚Üí Calculate: distance, speed
      if (!timeInSeconds || timeInSeconds <= 0) {
        runDistance.value = '';
        runSpeed.value = '';
        return;
      }
      const secPerKm = parsePaceToSecondsPerKm();
      if (secPerKm == null || secPerKm <= 0) {
        runDistance.value = '';
        runSpeed.value = '';
        return;
      }
      // Calculate distance
      const km = timeInSeconds / secPerKm;
      const dist = convertKmToDistance(km, runDistanceUnit.value);
      runDistance.value = String(Number(dist.toFixed(2)));
      // Calculate speed
      const speedUnit = runSpeedUnit.value;
      let speed = 0;
      if (speedUnit === 'km/h') {
        speed = (km / timeInSeconds) * 3600;
      } else if (speedUnit === 'mph') {
        speed = ((km / 1.60934) / timeInSeconds) * 3600;
      } else if (speedUnit === 'm/s') {
        speed = (km * 1000) / timeInSeconds;
      }
      runSpeed.value = speed.toFixed(2);
    } else if (mode === 'speed-time') {
      // Inputs: speed, time ‚Üí Calculate: distance, pace
      if (!timeInSeconds || timeInSeconds <= 0) {
        runDistance.value = '';
        runPace.value = '';
        return;
      }
      const speedValue = parseFloat(runSpeed.value);
      if (isNaN(speedValue) || speedValue <= 0) {
        runDistance.value = '';
        runPace.value = '';
        return;
      }
      const speedUnit = runSpeedUnit.value;
      let kmPerHour = 0;
      if (speedUnit === 'km/h') {
        kmPerHour = speedValue;
      } else if (speedUnit === 'mph') {
        kmPerHour = speedValue * 1.60934;
      } else if (speedUnit === 'm/s') {
        kmPerHour = speedValue * 3.6;
      }
      // Calculate distance
      const km = (kmPerHour * timeInSeconds) / 3600;
      const dist = convertKmToDistance(km, runDistanceUnit.value);
      runDistance.value = String(Number(dist.toFixed(2)));
      // Calculate pace
      const paceUnit = runPaceUnit.value;
      let paceDistance = km;
      if (paceUnit === 'min/mi') paceDistance = km / 1.60934;
      const paceInSeconds = timeInSeconds / paceDistance;
      runPace.value = formatTime(paceInSeconds);
    } else if (mode === 'speed-distance') {
      // Inputs: speed, distance ‚Üí Calculate: time, pace
      if (!distanceInKm || distanceInKm <= 0) {
        runHours.value = '';
        runMinutes.value = '';
        runSeconds.value = '';
        runPace.value = '';
        return;
      }
      const speedValue = parseFloat(runSpeed.value);
      if (isNaN(speedValue) || speedValue <= 0) {
        runHours.value = '';
        runMinutes.value = '';
        runSeconds.value = '';
        runPace.value = '';
        return;
      }
      const speedUnit = runSpeedUnit.value;
      let kmPerHour = 0;
      if (speedUnit === 'km/h') {
        kmPerHour = speedValue;
      } else if (speedUnit === 'mph') {
        kmPerHour = speedValue * 1.60934;
      } else if (speedUnit === 'm/s') {
        kmPerHour = speedValue * 3.6;
      }
      // Calculate time
      const totalSeconds = (distanceInKm / kmPerHour) * 3600;
      const h = Math.floor(totalSeconds / 3600);
      const m = Math.floor((totalSeconds % 3600) / 60);
      const s = Math.floor(totalSeconds % 60);
      runHours.value = String(h);
      runMinutes.value = String(m);
      runSeconds.value = String(s);
      // Calculate pace
      const paceUnit = runPaceUnit.value;
      let paceDistance = distanceInKm;
      if (paceUnit === 'min/mi') paceDistance = distanceInKm / 1.60934;
      const paceInSeconds = totalSeconds / paceDistance;
      runPace.value = formatTime(paceInSeconds);
    }
  }

  function resetRunning() {
    runDistance.value = '';
    runHours.value = '';
    runMinutes.value = '';
    runSeconds.value = '';
    runPace.value = '';
    runSpeed.value = '';
  }

  // Shortcut buttons event listeners with event delegation
  document.addEventListener('click', (e) => {
    const target = e.target as HTMLButtonElement;
    
    if (target.dataset.distance !== undefined) {
      const km = parseFloat(target.dataset.distance || '0');
      const converted = convertKmToDistance(km, runDistanceUnit.value);
      runDistance.value = String(Number(converted.toFixed(2)));
      runDistance.dispatchEvent(new Event('input', { bubbles: true }));
    }
    
    if (target.dataset.time !== undefined) {
      const seconds = parseInt(target.dataset.time || '0');
      const h = Math.floor(seconds / 3600);
      const m = Math.floor((seconds % 3600) / 60);
      const s = seconds % 60;
      runHours.value = String(h);
      runMinutes.value = String(m);
      runSeconds.value = String(s);
      runHours.dispatchEvent(new Event('input', { bubbles: true }));
    }
    
    if (target.dataset.pace !== undefined) {
      runPace.value = target.dataset.pace || '0:00';
      runPace.dispatchEvent(new Event('input', { bubbles: true }));
    }
    
    if (target.dataset.speed !== undefined) {
      const kmh = parseFloat(target.dataset.speed || '0');
      let speedValue = kmh;
      if (runSpeedUnit.value === 'mph') {
        speedValue = kmh / 1.60934;
      } else if (runSpeedUnit.value === 'm/s') {
        speedValue = kmh / 3.6;
      }
      runSpeed.value = String(Number(speedValue.toFixed(2)));
      runSpeed.dispatchEvent(new Event('input', { bubbles: true }));
    }
  });

  // Initialize event listeners
  function initializeEventListeners() {
    runMode?.addEventListener('change', () => { setReadonlyStates(); updateModeClass(); calculateRunning(); });
    updateModeClass();
    setReadonlyStates();

    // Recalculate on unit change
    runDistanceUnit?.addEventListener('change', () => {
      if (runDistance.value && getTimeInSeconds() > 0) calculateRunning();
    });
    runPaceUnit?.addEventListener('change', () => {
      calculateRunning();
    });
    runSpeedUnit?.addEventListener('change', () => {
      calculateRunning();
    });

    // Recalculate on input changes
    runDistance?.addEventListener('input', calculateRunning);
    runHours?.addEventListener('input', calculateRunning);
    runMinutes?.addEventListener('input', calculateRunning);
    runSeconds?.addEventListener('input', calculateRunning);
    runPace?.addEventListener('input', calculateRunning);
    runSpeed?.addEventListener('input', calculateRunning);
  }

  // Make sure DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initializeEventListeners);
  } else {
    initializeEventListeners();
  }
</script>
