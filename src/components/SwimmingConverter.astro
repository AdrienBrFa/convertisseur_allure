---
// Swimming Converter Component
---

<div class="converter-section">
  <h2>üèä Swimming Pace Converter</h2>
  <div class="mode-select">
    <label for="swim-mode">Mode</label>
    <select id="swim-mode">
      <option value="distance-time">Distance + Time ‚Üí Pace</option>
      <option value="pace-distance">Pace + Distance ‚Üí Time</option>
      <option value="pace-time">Pace + Time ‚Üí Distance</option>
      <option value="speed-time">Speed + Time ‚Üí Distance</option>
      <option value="speed-distance">Speed + Distance ‚Üí Time</option>
    </select>
  </div>
  
  <div class="converter-grid" id="swim-grid">
    <div class="input-group" data-field="distance">
      <label for="swim-distance">Distance</label>
      <div class="input-with-unit">
        <input type="number" id="swim-distance" step="0.01" min="0" placeholder="0" />
        <select id="swim-distance-unit">
          <option value="m">m</option>
          <option value="km">km</option>
          <option value="yd">yd</option>
          <option value="mi">mi</option>
        </select>
      </div>
    </div>

    <div class="input-group" data-field="time">
      <label for="swim-time">Time</label>
      <div class="time-inputs">
        <input type="number" id="swim-hours" min="0" max="23" placeholder="h" />
        <span>:</span>
        <input type="number" id="swim-minutes" min="0" max="59" placeholder="m" />
        <span>:</span>
        <input type="number" id="swim-seconds" min="0" max="59" placeholder="s" />
      </div>
    </div>

    <div class="input-group" data-field="pace">
      <label for="swim-pace">Pace</label>
      <div class="input-with-unit">
        <input type="text" id="swim-pace" placeholder="0:00" readonly />
        <select id="swim-pace-unit">
          <option value="min/100m">m/100m</option>
          <option value="min/100yd">100yd</option>
        </select>
      </div>
    </div>

    <div class="input-group" data-field="speed">
      <label for="swim-speed">Speed</label>
      <div class="input-with-unit">
        <input type="text" id="swim-speed" placeholder="0.00" readonly />
        <select id="swim-speed-unit">
          <option value="km/h">km/h</option>
          <option value="mph">mph</option>
          <option value="m/s">m/s</option>
        </select>
      </div>
    </div>
  </div>
</div>

<style>
  .converter-section {
    background: white;
    border-radius: 1rem;
    padding: 2rem;
    box-shadow: var(--shadow);
    margin: 0 auto 2rem;
    max-width: 900px;
  }

  .converter-grid {
    display: grid;
    gap: 1.5rem;
    margin-bottom: 1.5rem;
  }

  .mode-select {
    display: flex;
    gap: 0.75rem;
    align-items: center;
    margin-bottom: 1rem;
  }

  @media (min-width: 768px) {
    .converter-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  label {
    font-weight: 500;
    font-size: 0.95rem;
    color: var(--text-color);
  }

  .input-with-unit {
    display: flex;
    gap: 0.5rem;
  }

  .input-with-unit input {
    flex: 1;
    min-width: 0;
  }

  input[type="number"],
  input[type="text"],
  select {
    padding: 0.75rem;
    border: 1px solid var(--border-color);
    border-radius: 0.5rem;
    background: white;
  }

  select {
    min-width: 85px;
    cursor: pointer;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .time-inputs {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .time-inputs input {
    flex: 1;
    text-align: center;
  }

  .time-inputs span {
    font-weight: bold;
    color: var(--text-color);
  }

  /* Reordering by mode */
  .converter-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
    margin-bottom: 1.5rem;
  }

  .input-group {
    flex: 1 1 calc(50% - 0.75rem);
    min-width: 280px;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .converter-grid.mode-distance-time [data-field="distance"] { order: 1; }
  .converter-grid.mode-distance-time [data-field="time"] { order: 2; }
  .converter-grid.mode-distance-time [data-field="pace"] { order: 3; }
  .converter-grid.mode-distance-time [data-field="speed"] { order: 4; }

  .converter-grid.mode-pace-distance [data-field="pace"] { order: 1; }
  .converter-grid.mode-pace-distance [data-field="distance"] { order: 2; }
  .converter-grid.mode-pace-distance [data-field="time"] { order: 3; }
  .converter-grid.mode-pace-distance [data-field="speed"] { order: 4; }

  .converter-grid.mode-pace-time [data-field="pace"] { order: 1; }
  .converter-grid.mode-pace-time [data-field="time"] { order: 2; }
  .converter-grid.mode-pace-time [data-field="distance"] { order: 3; }
  .converter-grid.mode-pace-time [data-field="speed"] { order: 4; }

  .converter-grid.mode-speed-time [data-field="speed"] { order: 1; }
  .converter-grid.mode-speed-time [data-field="time"] { order: 2; }
  .converter-grid.mode-speed-time [data-field="distance"] { order: 3; }
  .converter-grid.mode-speed-time [data-field="pace"] { order: 4; }

  .converter-grid.mode-speed-distance [data-field="speed"] { order: 1; }
  .converter-grid.mode-speed-distance [data-field="distance"] { order: 2; }
  .converter-grid.mode-speed-distance [data-field="time"] { order: 3; }
  .converter-grid.mode-speed-distance [data-field="pace"] { order: 4; }


  @media (max-width: 640px) {
    .converter-section {
      padding: 1.5rem;
    }

    .mode-select {
      flex-direction: column;
      align-items: flex-start;
    }

    .input-group {
      flex: 0 0 100%;
    }

    .input-with-unit input {
      flex: 1;
      padding: 0.5rem;
    }

    .input-with-unit select {
      flex: 0 0 auto;
      min-width: 0;
    }
  }
</style>

<script>
  // Swimming Converter Logic
  const swimDistance = document.getElementById('swim-distance') as HTMLInputElement;
  const swimDistanceUnit = document.getElementById('swim-distance-unit') as HTMLSelectElement;
  const swimHours = document.getElementById('swim-hours') as HTMLInputElement;
  const swimMinutes = document.getElementById('swim-minutes') as HTMLInputElement;
  const swimSeconds = document.getElementById('swim-seconds') as HTMLInputElement;
  const swimPace = document.getElementById('swim-pace') as HTMLInputElement;
  const swimPaceUnit = document.getElementById('swim-pace-unit') as HTMLSelectElement;
  const swimSpeed = document.getElementById('swim-speed') as HTMLInputElement;
  const swimSpeedUnit = document.getElementById('swim-speed-unit') as HTMLSelectElement;
  const swimMode = document.getElementById('swim-mode') as HTMLSelectElement;
  const swimGrid = document.getElementById('swim-grid') as HTMLElement;

  function updateModeClass() {
    const mode = swimMode?.value || 'distance-time';
    swimGrid?.classList.remove('mode-distance-time', 'mode-pace-distance', 'mode-pace-time', 'mode-speed-time', 'mode-speed-distance');
    swimGrid?.classList.add(`mode-${mode}`);
  }

  function convertDistanceToMeters(distance: number, unit: string): number {
    switch (unit) {
      case 'm': return distance;
      case 'km': return distance * 1000;
      case 'yd': return distance * 0.9144;
      case 'mi': return distance * 1609.34;
      default: return distance;
    }
  }

  function convertMetersToDistance(meters: number, unit: string): number {
    switch (unit) {
      case 'm': return meters;
      case 'km': return meters / 1000;
      case 'yd': return meters / 0.9144;
      case 'mi': return meters / 1609.34;
      default: return meters;
    }
  }

  function getTimeInSeconds(): number {
    const h = parseInt(swimHours.value) || 0;
    const m = parseInt(swimMinutes.value) || 0;
    const s = parseInt(swimSeconds.value) || 0;
    return h * 3600 + m * 60 + s;
  }

  function formatTime(seconds: number): string {
    const m = Math.floor(seconds / 60);
    const s = Math.floor(seconds % 60);
    return `${m}:${s.toString().padStart(2, '0')}`;
  }

  function parseSwimPaceToSecondsPerMeter(): number | null {
    // swimPace as mm:ss per 100m or 100yd
    const val = (swimPace.value || '').trim();
    if (!val) return null;
    const parts = val.split(':');
    if (parts.length !== 2) return null;
    const m = parseInt(parts[0]);
    const s = parseInt(parts[1]);
    if (isNaN(m) || isNaN(s)) return null;
    let secPer100 = m * 60 + s;
    // Convert to seconds per meter
    let secPerMeter = secPer100 / 100; // for 100m
    if (swimPaceUnit.value === 'min/100yd') {
      // 100yd = 91.44m
      secPerMeter = secPer100 / 91.44;
    }
    return secPerMeter;
  }

  function setReadonlyStates() {
    const mode = swimMode?.value || 'distance-time';
    // First two fields are always inputs, last two are always calculated
    if (mode === 'distance-time') {
      swimDistance.readOnly = false;
      swimHours.readOnly = false;
      swimMinutes.readOnly = false;
      swimSeconds.readOnly = false;
      swimPace.readOnly = true;
      swimSpeed.readOnly = true;
    } else if (mode === 'pace-distance') {
      swimPace.readOnly = false;
      swimDistance.readOnly = false;
      swimHours.readOnly = true;
      swimMinutes.readOnly = true;
      swimSeconds.readOnly = true;
      swimSpeed.readOnly = true;
    } else if (mode === 'pace-time') {
      swimPace.readOnly = false;
      swimHours.readOnly = false;
      swimMinutes.readOnly = false;
      swimSeconds.readOnly = false;
      swimDistance.readOnly = true;
      swimSpeed.readOnly = true;
    } else if (mode === 'speed-time') {
      swimSpeed.readOnly = false;
      swimHours.readOnly = false;
      swimMinutes.readOnly = false;
      swimSeconds.readOnly = false;
      swimDistance.readOnly = true;
      swimPace.readOnly = true;
    } else if (mode === 'speed-distance') {
      swimSpeed.readOnly = false;
      swimDistance.readOnly = false;
      swimHours.readOnly = true;
      swimMinutes.readOnly = true;
      swimSeconds.readOnly = true;
      swimPace.readOnly = true;
    }
  }

  function calculateSwimming() {
    const mode = swimMode?.value || 'distance-time';
    const distance = parseFloat(swimDistance.value);
    const timeInSeconds = getTimeInSeconds();
    const distanceInMeters = !isNaN(distance) ? convertDistanceToMeters(distance, swimDistanceUnit.value) : NaN;

    // Each mode calculates exactly its two output fields (order 3 and 4)
    if (mode === 'distance-time') {
      // Inputs: distance + time ‚Üí Outputs: pace + speed
      if (!distanceInMeters || distanceInMeters <= 0 || !timeInSeconds || timeInSeconds <= 0) {
        swimPace.value = '';
        swimSpeed.value = '';
        return;
      }
      // Calculate pace (order 3)
      const paceUnit = swimPaceUnit.value;
      let per100Distance = 100; // meters
      if (paceUnit === 'min/100yd') per100Distance = 91.44;
      const paceInSeconds = timeInSeconds / (distanceInMeters / per100Distance);
      swimPace.value = formatTime(paceInSeconds);
      
      // Calculate speed (order 4)
      const speedUnit = swimSpeedUnit.value;
      let speed = 0;
      if (speedUnit === 'km/h') {
        speed = ((distanceInMeters / 1000) / timeInSeconds) * 3600;
      } else if (speedUnit === 'mph') {
        speed = ((distanceInMeters / 1609.34) / timeInSeconds) * 3600;
      } else if (speedUnit === 'm/s') {
        speed = distanceInMeters / timeInSeconds;
      }
      swimSpeed.value = speed.toFixed(2);
    } else if (mode === 'pace-distance') {
      // Inputs: pace + distance ‚Üí Outputs: time + speed
      const secPerMeter = parseSwimPaceToSecondsPerMeter();
      if (!distanceInMeters || distanceInMeters <= 0 || secPerMeter == null || secPerMeter <= 0) {
        swimHours.value = '';
        swimMinutes.value = '';
        swimSeconds.value = '';
        swimSpeed.value = '';
        return;
      }
      // Calculate time (order 3)
      const totalSeconds = secPerMeter * distanceInMeters;
      const h = Math.floor(totalSeconds / 3600);
      const m = Math.floor((totalSeconds % 3600) / 60);
      const s = Math.floor(totalSeconds % 60);
      swimHours.value = String(h);
      swimMinutes.value = String(m);
      swimSeconds.value = String(s);
      
      // Calculate speed (order 4)
      const speedUnit = swimSpeedUnit.value;
      let speed = 0;
      if (speedUnit === 'km/h') {
        speed = ((distanceInMeters / 1000) / totalSeconds) * 3600;
      } else if (speedUnit === 'mph') {
        speed = ((distanceInMeters / 1609.34) / totalSeconds) * 3600;
      } else if (speedUnit === 'm/s') {
        speed = distanceInMeters / totalSeconds;
      }
      swimSpeed.value = speed.toFixed(2);
    } else if (mode === 'pace-time') {
      // Inputs: pace + time ‚Üí Outputs: distance + speed
      const secPerMeter = parseSwimPaceToSecondsPerMeter();
      if (!timeInSeconds || timeInSeconds <= 0 || secPerMeter == null || secPerMeter <= 0) {
        swimDistance.value = '';
        swimSpeed.value = '';
        return;
      }
      // Calculate distance (order 3)
      const meters = timeInSeconds / secPerMeter;
      const dist = convertMetersToDistance(meters, swimDistanceUnit.value);
      swimDistance.value = String(Number(dist.toFixed(2)));
      
      // Calculate speed (order 4)
      const speedUnit = swimSpeedUnit.value;
      let speed = 0;
      if (speedUnit === 'km/h') {
        speed = ((meters / 1000) / timeInSeconds) * 3600;
      } else if (speedUnit === 'mph') {
        speed = ((meters / 1609.34) / timeInSeconds) * 3600;
      } else if (speedUnit === 'm/s') {
        speed = meters / timeInSeconds;
      }
      swimSpeed.value = speed.toFixed(2);
    } else if (mode === 'speed-time') {
      // Inputs: speed + time ‚Üí Outputs: distance + pace
      const speedValue = parseFloat(swimSpeed.value);
      if (!timeInSeconds || timeInSeconds <= 0 || isNaN(speedValue) || speedValue <= 0) {
        swimDistance.value = '';
        swimPace.value = '';
        return;
      }
      // Calculate distance (order 3)
      const speedUnit = swimSpeedUnit.value;
      let metersPerSecond = 0;
      if (speedUnit === 'km/h') {
        metersPerSecond = speedValue / 3.6;
      } else if (speedUnit === 'mph') {
        metersPerSecond = (speedValue * 1609.34) / 3600;
      } else if (speedUnit === 'm/s') {
        metersPerSecond = speedValue;
      }
      const meters = metersPerSecond * timeInSeconds;
      const dist = convertMetersToDistance(meters, swimDistanceUnit.value);
      swimDistance.value = String(Number(dist.toFixed(2)));
      
      // Calculate pace (order 4)
      const paceUnit = swimPaceUnit.value;
      let per100Distance = 100;
      if (paceUnit === 'min/100yd') per100Distance = 91.44;
      const paceInSeconds = timeInSeconds / (meters / per100Distance);
      swimPace.value = formatTime(paceInSeconds);
    } else if (mode === 'speed-distance') {
      // Inputs: speed + distance ‚Üí Outputs: time + pace
      const speedValue = parseFloat(swimSpeed.value);
      if (!distanceInMeters || distanceInMeters <= 0 || isNaN(speedValue) || speedValue <= 0) {
        swimHours.value = '';
        swimMinutes.value = '';
        swimSeconds.value = '';
        swimPace.value = '';
        return;
      }
      // Calculate time (order 3)
      const speedUnit = swimSpeedUnit.value;
      let metersPerSecond = 0;
      if (speedUnit === 'km/h') {
        metersPerSecond = speedValue / 3.6;
      } else if (speedUnit === 'mph') {
        metersPerSecond = (speedValue * 1609.34) / 3600;
      } else if (speedUnit === 'm/s') {
        metersPerSecond = speedValue;
      }
      const totalSeconds = distanceInMeters / metersPerSecond;
      const h = Math.floor(totalSeconds / 3600);
      const m = Math.floor((totalSeconds % 3600) / 60);
      const s = Math.floor(totalSeconds % 60);
      swimHours.value = String(h);
      swimMinutes.value = String(m);
      swimSeconds.value = String(s);
      
      // Calculate pace (order 4)
      const paceUnit = swimPaceUnit.value;
      let per100Distance = 100;
      if (paceUnit === 'min/100yd') per100Distance = 91.44;
      const paceInSeconds = totalSeconds / (distanceInMeters / per100Distance);
      swimPace.value = formatTime(paceInSeconds);
    }
  }

  function resetSwimming() {
    swimDistance.value = '';
    swimHours.value = '';
    swimMinutes.value = '';
    swimSeconds.value = '';
    swimPace.value = '';
    swimSpeed.value = '';
  }

  swimMode?.addEventListener('change', () => { setReadonlyStates(); updateModeClass(); calculateSwimming(); });
  updateModeClass();
  setReadonlyStates();

  // Recalculate on unit change
  swimDistanceUnit?.addEventListener('change', () => {
    calculateSwimming();
  });
  swimPaceUnit?.addEventListener('change', () => {
    calculateSwimming();
  });
  swimSpeedUnit?.addEventListener('change', () => {
    calculateSwimming();
  });

  // Recalculate on input changes
  swimDistance?.addEventListener('input', calculateSwimming);
  swimHours?.addEventListener('input', calculateSwimming);
  swimMinutes?.addEventListener('input', calculateSwimming);
  swimSeconds?.addEventListener('input', calculateSwimming);
  swimPace?.addEventListener('input', calculateSwimming);
  swimSpeed?.addEventListener('input', calculateSwimming);
</script>
