---
import Layout from '../layouts/Layout.astro';
import RunningConverter from '../components/RunningConverter.astro';
import SwimmingConverter from '../components/SwimmingConverter.astro';
---

<Layout title="Running & Swimming Pace Converter" description="Convert between pace, speed, time, and distance for running and swimming. Fast, mobile-first pace calculator for athletes.">
  <main>
    <header class="header">
      <div class="container">
        <h1>üèÉüèä Running & Swimming Pace Converter</h1>
        <p class="subtitle">Convert between pace, speed, time, and distance</p>
      </div>
    </header>

    <div class="container">
      <RunningConverter />
      <SwimmingConverter />

      <footer class="footer">
        <p>Made for athletes who want to quickly convert their training metrics</p>
      </footer>
    </div>
  </main>
</Layout>

<style>
  main {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  .header {
    background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
    color: white;
    padding: 3rem 1rem;
    text-align: center;
    box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
  }

  .header h1 {
    margin-bottom: 0.5rem;
  }

  .subtitle {
    font-size: 1.125rem;
    opacity: 0.95;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
    width: 100%;
  }

  .footer {
    text-align: center;
    padding: 2rem 1rem;
    color: #6b7280;
    font-size: 0.875rem;
    margin-top: auto;
  }

  @media (max-width: 640px) {
    .header {
      padding: 2rem 1rem;
    }

    .container {
      padding: 1.5rem 1rem;
    }
  }
</style>
