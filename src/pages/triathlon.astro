---
import Layout from '../layouts/Layout.astro';
import TriathlonTiming from '../components/TriathlonTiming.astro';
---

<Layout title="Calculatrice de Temps Triathlon - Estimateur Split" description="Estimez vos temps de split et temps total en triathlon. Calculez natation, cyclisme et course √† pied pour XS, S, M, L, XL.">
  <main>
    <header class="header">
      <div class="container">
        <h1>üèäüö¥üèÉ Triathlon Timing</h1>
        <p class="subtitle">Estimate split times and total race time</p>
      </div>
    </header>

    <div class="container">x
      <div style="text-align: center;">
        <a href={import.meta.env.BASE_URL} class="back-link">‚Üê Back to menu</a>
      </div>

      <TriathlonTiming />

      <section class="content-section">
        <h2>How calculations work</h2>
        <ul>
          <li><strong>Swimming</strong>: pace mm:ss per 100m or speed km/h</li>
          <li><strong>Cycling</strong>: speed km/h or pace mm:ss per km</li>
          <li><strong>Running</strong>: pace mm:ss per km or speed km/h</li>
        </ul>
        <p>Distances are pre-filled from category defaults (XS, S, M, L, XL) and remain editable.</p>
      </section>

      <footer class="footer">
        <p>Plan your race splits quickly and clearly</p>
      </footer>
    </div>
  </main>
</Layout>

<style>
  main {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  .header {
    background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
    color: white;
    padding: 3rem 1rem;
    text-align: center;
    box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
  }

  .header h1 { margin-bottom: 0.5rem; }
  .subtitle { font-size: 1.125rem; opacity: 0.95; }

  .container { max-width: 1200px; margin: 0 auto; padding: 2rem 1rem; width: 100%; }

  .back-link {
    display: inline-flex;
    justify-content: center;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 0.75rem;
    background: white;
    color: var(--primary-color);
    text-decoration: none;
    font-size: 0.9375rem;
    font-weight: 500;
    border-radius: 0.375rem;
    box-shadow: var(--shadow);
    margin: 0 auto 2rem;
    transition: all 0.2s;
  }

  .back-link:hover { box-shadow: 0 4px 8px -2px rgb(0 0 0 / 0.2); transform: translateY(-2px); }

  .content-section {
    max-width: 900px;
    margin: 1rem auto 2rem;
    background: #ffffff;
    border: 1px solid var(--border-color);
    border-radius: 0.75rem;
    box-shadow: var(--shadow);
    padding: 1.5rem;
    color: var(--text-color);
  }

  .content-section h2 { margin-bottom: 0.75rem; color: var(--primary-color); font-size: 1.25rem; }
  .content-section ul { margin: 0.5rem 0 0; padding-left: 1.25rem; }

  .footer { text-align: center; padding: 2rem 1rem; color: #6b7280; font-size: 0.875rem; margin-top: auto; }

  @media (max-width: 640px) {
    .header { padding: 2rem 1rem; }
    .container { padding: 1.5rem 1rem; }
  }
</style>